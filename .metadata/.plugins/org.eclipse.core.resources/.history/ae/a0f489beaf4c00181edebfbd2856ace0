import java.io.IOException;
import java.net.UnknownHostException;
import java.util.Scanner;

public class Part1 {

	private static final int peersTotal = 5;
	public static JThread[] threads;
	
	public static void main(String[] args) throws UnknownHostException, IOException{
		Peer p;
		threads = new JThread[peersTotal];
		for(int i=1; i<=peersTotal; i++){
		      JThread thread = new JThread( "Thread-" + (2000 + i), (2000 + i));
		      threads[i-1] = thread;
		      thread.start();
		}
		
		while(true){
			Scanner scan = new Scanner(System.in);
			System.out.println("Enter Port Number to connect " + 2001 + " : ");
			String port = scan.next();
			System.out.println("Enter Max Number of Conenctions for Peer " + 2001 + " : (-1 for leaving default max) ");
			String connections = scan.next();
			
			JThread thread = threads[0];
			
			thread.connectPeer(Integer.parseInt(port), Integer.parseInt(connections));
		}
		
		
		
	}
	
	public int getThreadIdByAvailability(){
		
	}
}
